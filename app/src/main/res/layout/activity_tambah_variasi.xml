<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".Tambah_Variasi">

    <RelativeLayout
        android:id="@+id/header_Produk"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/burger_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/menu"/>

        <TextView
            android:id="@+id/tambahproduk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="70sp"
            android:layout_marginTop="35sp"
            android:text="Tambah Variasi"
            android:fontFamily="@font/lexendbold"
            android:textSize="17sp"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/GreyText"
        android:layout_below="@id/header_Produk"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ukuran"
            android:layout_marginTop="30dp"
            android:layout_marginStart="30dp"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:fontFamily="@font/lexendsemibold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Warna"
            android:layout_marginTop="30dp"
            android:layout_marginStart="30dp"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:fontFamily="@font/lexendsemibold"/>

    </LinearLayout>

</LinearLayout>