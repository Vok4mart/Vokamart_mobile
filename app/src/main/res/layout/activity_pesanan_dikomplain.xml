<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".pesanan_dikomplain">

    <LinearLayout
        android:id="@+id/header1"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/menu"/>

        <TextView
            android:id="@+id/dikomplain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10sp"
            android:layout_marginTop="35sp"
            android:text="Dikomplain"
            android:fontFamily="@font/lexendbold"
            android:textSize="20sp"/>
    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:background="@color/GreyText"
        android:layout_below="@id/header1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bukti Gambar"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"
        android:fontFamily="@font/lexendsemibold"
        android:textColor="@color/black"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/frame2">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_photo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="30dp"
            android:paddingEnd="20dp"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="@color/RedAccent"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_photo2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="20dp"
            android:paddingEnd="20dp"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="@color/RedAccent"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_photo3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="20dp"
            android:paddingEnd="20dp"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="@color/RedAccent"/>
    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:background="@color/GreyText"
        android:layout_below="@id/frame_gambar"
        android:layout_marginTop="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Deskrpsi"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"
        android:fontFamily="@font/lexendsemibold"
        android:textColor="@color/black"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/frame_gambar">

        <EditText
            android:id="@+id/edt_deskripsi1"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/search_border"
            android:inputType="text"
            android:fontFamily="@font/lexendregular"
            android:textSize="15dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"/>

    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:background="@color/GreyText"
        android:layout_below="@id/frame_gambar"
        android:layout_marginTop="30dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tolak_pengembalian"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Tolak Pengembalian"
        android:textSize="15sp"
        android:textColor="@color/GreyText"
        android:layout_marginStart="25dp"
            android:layout_marginBottom="20dp"
        android:fontFamily="@font/lexendregular"
            android:layout_gravity="bottom"/>

        <TextView
            android:id="@+id/terima_pengembalian"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Terima Pengembalian"
            android:textSize="15sp"
            android:layout_marginStart="30dp"
            android:textColor="@color/RedPrimary"
            android:fontFamily="@font/lexendregular"
            android:layout_gravity="bottom"
            android:layout_marginBottom="20dp"/>
    </LinearLayout>
</LinearLayout>