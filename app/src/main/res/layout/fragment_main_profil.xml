<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:text="Logout"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="33dp"
        android:textSize="18sp"
        android:textColor="@color/RedPrimary"
        android:fontFamily="@font/lexendmedium"/>

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/menu"/>

        <TextView
            android:id="@+id/tambahproduk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10sp"
            android:layout_marginTop="35sp"
            android:text="Profil"
            android:fontFamily="@font/lexendbold"
            android:textSize="20sp"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/GreyText"
        android:layout_below="@id/header"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/img_profil"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@+id/header"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        app:cardCornerRadius="15dp"
        android:outlineAmbientShadowColor="@color/GreyText">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/header"
            android:layout_centerHorizontal="true"
            android:src="@drawable/baseline_person_24"/>
    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:layout_below="@+id/img_profil"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_marginTop="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama"
            android:paddingStart="40dp"
            android:textSize="20sp"
            android:fontFamily="@font/lexendsemibold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:paddingEnd="40dp"
            android:paddingStart="40dp"/>

        <TextView
            android:layout_marginTop="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textSize="20sp"
            android:paddingStart="40dp"
            android:fontFamily="@font/lexendsemibold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:paddingEnd="40dp"
            android:paddingStart="40dp"/>

        <TextView
            android:layout_marginTop="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="40dp"
            android:text="No. HP"
            android:textSize="20sp"
            android:fontFamily="@font/lexendsemibold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingEnd="40dp"
            android:paddingStart="40dp"
            android:layout_marginTop="15dp"/>

        <Button
            android:id="@+id/button_ubah_profil"
            android:background="@drawable/button_primary"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:text="Ubah"
            android:fontFamily="@font/lexendsemibold"
            android:textColor="@color/white"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            />
        
    </LinearLayout>

</RelativeLayout>