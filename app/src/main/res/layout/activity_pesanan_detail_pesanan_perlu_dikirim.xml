<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DetailActivity.DetailPesananPerluDikirim">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <LinearLayout
        android:id="@+id/header1"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/menu"/>

        <TextView
            android:id="@+id/dikomplain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10sp"
            android:layout_marginTop="35sp"
            android:text="Detail Pesanan"
            android:fontFamily="@font/lexendbold"
            android:textSize="20sp"/>
    </LinearLayout>

    <View
        android:id="@+id/garis_bawah_detail_pesanan"
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:background="@color/GreyText"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="30dp"
            android:textSize="15sp"
            android:text="Detail Produk"
            android:fontFamily="@font/lexendregular"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyler_detail_pesanan_dikirim"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <View
        android:id="@+id/garis_bawah_detail_produk"
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:background="@color/GreyText"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Detail Pengiriman"
        android:textSize="15sp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="30dp"
        android:fontFamily="@font/lexendbold"/>

    <LinearLayout
        android:id="@+id/txt_kurir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_marginStart="30sp"
            android:textSize="15sp"
            android:text="Kurir"
            android:fontFamily="@font/lexendregular"/>

        <TextView
            android:id="@+id/nama_kurir_dikirim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_marginStart="30sp"
            android:textSize="15sp"
            android:textColor="@color/RedPrimary"
            android:text="nama kurir"
            android:fontFamily="@font/lexendregular"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_marginStart="30sp"
            android:textSize="15sp"
            android:text="Alamat"
            android:fontFamily="@font/lexendregular"/>

        <TextView
            android:id="@+id/nama_pembeli_dikirim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_marginStart="14sp"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:text="nama pembeli"
            android:fontFamily="@font/lexendregular"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="97dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/no_hp_dikirim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:textSize="15sp"
            android:text="no hp"
            android:fontFamily="@font/lexendregular"/>

        <TextView
            android:id="@+id/alamat_dikirim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:textSize="15sp"
            android:text="alamat"
            android:fontFamily="@font/lexendregular"/>
    </LinearLayout>

    <View
        android:id="@+id/garis_bawah_detail_pengiriman"
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:layout_marginTop="30dp"
        android:background="@color/GreyText"/>

    <RelativeLayout
        android:layout_below="@+id/garis_bawah_detail_pesanan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Detail Pembayaran"
            android:fontFamily="@font/lexendregular"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:layout_marginStart="30dp"/>
    </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp">

            <TextView
                android:id="@+id/total_harga_dikirim"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Harga"
                android:layout_marginTop="10dp"
                android:layout_alignParentStart="true"/>

            <TextView
                android:id="@+id/total_rupiah_dikirim"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Harga"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="30dp"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp">

            <TextView
                android:id="@+id/ongkir_dikirim"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ongkos Kirim"
                android:layout_marginTop="10dp"
                android:layout_alignParentStart="true"/>

            <TextView
                android:id="@+id/rupaihongkir_dikirim"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Harga"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="30dp"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp">

            <TextView
                android:id="@+id/jumlah_total_dikirim"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Harga"
                android:layout_marginTop="10dp"
                android:layout_alignParentStart="true"/>

            <TextView
                android:id="@+id/jumlah_rupiah_dikirim"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Harga"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="30dp"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_height="wrap_content"
                app:boxCornerRadiusBottomEnd="10dp"
                app:boxCornerRadiusTopStart="10dp"
                app:boxCornerRadiusTopEnd="10dp"
                app:boxCornerRadiusBottomStart="10dp"
                android:layout_marginTop="20dp">

                <EditText
                    android:id="@+id/No_resi"
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:hint="Masukkan Resi"
                    android:layout_gravity="center"
                    android:fontFamily="@font/lexendregular"/>
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/btn_kirim_resi"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:text="Kirim resi"
                android:fontFamily="@font/lexendbold"
                android:background="@drawable/button_primary"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>