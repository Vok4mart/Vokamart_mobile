<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity.DetailProduk">

    <LinearLayout
        android:id="@+id/header_detail_produk"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/menu"/>

        <TextView
            android:id="@+id/tambahproduk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10sp"
            android:layout_marginTop="35sp"
            android:text="Detail Produk"
            android:fontFamily="@font/lexendbold"
            android:textSize="20sp"/>

    </LinearLayout>


    <View
        android:id="@+id/view_garis_detail_produk"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/GreyText"
        android:layout_below="@id/header_detail_produk"/>

    <LinearLayout
        android:id="@+id/Linear_foto_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_garis_detail_produk"
        android:layout_marginTop="20dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lexendbold"
            android:text="Foto Produk"
            android:textColor="@color/black"
            android:textSize="18sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tambah"
            android:layout_marginStart="150sp"
            android:fontFamily="@font/lexendbold"
            android:textColor="@color/RedPrimary"/>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_photo"
        android:layout_width="370dp"
        android:layout_height="150dp"
        android:layout_below="@id/Linear_foto_text"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@color/RedAccent">
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/linear_deskripsi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/card_photo"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="20dp"
            android:text="Nama produk"
            android:textSize="18sp"
            android:fontFamily="@font/lexendbold"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/Detail_nama_produk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:paddingStart="20dp"
            android:text="Nama produk"
            android:textSize="15sp"
            android:fontFamily="@font/lexendregular"
            android:textColor="@color/GreyText"/>

        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="20dp"
            android:text="Stok"
            android:textSize="18sp"
            android:fontFamily="@font/lexendbold"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/Detail_produk_stok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:paddingStart="20dp"
            android:text="@string/Stok"
            android:textSize="15sp"
            android:fontFamily="@font/lexendregular"
            android:textColor="@color/GreyText"/>

        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="20dp"
            android:text="Harga"
            android:textSize="18sp"
            android:fontFamily="@font/lexendbold"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/Detail_produk_harga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:paddingStart="20dp"
            android:text="Harga"
            android:textSize="15sp"
            android:fontFamily="@font/lexendregular"
            android:textColor="@color/GreyText"/>

        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="20dp"
            android:text="Deskripsi"
            android:textSize="18sp"
            android:fontFamily="@font/lexendbold"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/Detail_produk_deskripsi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:paddingStart="20dp"
            android:text="Deskripsi"
            android:textSize="15sp"
            android:fontFamily="@font/lexendregular"
            android:textColor="@color/GreyText"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/Btn_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear_deskripsi"
        android:layout_marginTop="20dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:layout_width="160dp"
            android:layout_height="55dp"
            android:text="Edit"
            android:fontFamily="@font/lexendbold"/>

        <Button
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="Hapus"
            android:fontFamily="@font/lexendbold"
            android:background="@drawable/button_primary"
            android:textColor="@color/white"
            android:layout_marginStart="15dp"/>


    </LinearLayout>



</RelativeLayout>